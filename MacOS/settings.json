{
  // ------------------------------
  // Tema & editor-inställningar
  // ------------------------------

  "workbench.colorTheme": "Atom One Dark",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.unicodeHighlight.nonBasicASCII": false,
  "explorer.confirmDelete": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "explorer.confirmDragAndDrop": false,
  "editor.fontSize": 16,

  // ------------------------------
  // Språk-specifika inställningar
  // ------------------------------

  "[python]": {
    "editor.formatOnType": true
  },
  "editor.formatOnSave": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.tabSize": 2
  },

  // ------------------------------
  // Editor UI
  // ------------------------------

  "workbench.editor.empty.hint": "hidden",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "svelte.enable-ts-plugin": true,
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  // ------------------------------
  // Terminal-profiler (macOS)
  // ------------------------------

  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh"
    },
    "bash": {
      "path": "/bin/bash"
    }
  },

  // ------------------------------
  // Färg-anpassningar
  // ------------------------------

  "workbench.colorCustomizations": {
    "statusBar.background": "#252526",
    "statusBar.noFolderBackground": "#252526",
    "statusBar.debuggingBackground": "#252526",
    "sideBar.background": "#252526"
  },

  // ------------------------------
  // Vim-inställningar
  // ------------------------------

  "editor.lineNumbers": "relative",
  "vim.autoindent": true,
  "vim.leader": "<Space>",

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },
    { "before": ["leader", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["leader", "h"], "commands": ["workbench.action.focusLeftGroup"] },
    { "before": ["leader", "j"], "commands": ["workbench.action.focusBelowGroup"] },
    { "before": ["leader", "k"], "commands": ["workbench.action.focusAboveGroup"] },
    { "before": ["leader", "l"], "commands": ["workbench.action.focusRightGroup"] }
  ],

  "vim.insertModeKeyBindings": [
    // Flytta markören med Command + h/j/k/l i insert mode
    { "before": ["<D-h>"], "after": ["<left>"] },
    { "before": ["<D-j>"], "after": ["<down>"] },
    { "before": ["<D-k>"], "after": ["<up>"] },
    { "before": ["<D-l>"], "after": ["<right>"] },

    // jk för att lämna insert mode
    { "before": ["j", "k"], "after": ["<Esc>"] }
  ],

  "vim.visualModeKeyBindings": [
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],

  // ------------------------------
  // Formatter / Python
  // ------------------------------

  "python.defaultInterpreterPath": "/usr/bin/python3",

  // ------------------------------
  // UI-anpassningar
  // ------------------------------

  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.location": "hidden",
  "window.menuBarVisibility": "compact",
  "workbench.secondarySideBar.defaultVisibility": "visible"
}
